<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="IFRHoldClearanceTrainer.MainPage"
             xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit">

        <VerticalStackLayout
            Padding="30,5"
            Spacing="25">
            <HorizontalStackLayout>
                <Label Text="VFR"
                    Style="{StaticResource ButtonLabel}"
                />
                <Switch 
                    Toggled="OnChartTypeChange"
                />
                <Label 
                    Text="IFR"
                    Style="{StaticResource ButtonLabel}"
                />
            <Button
                x:Name="CounterBtn"
                Text="Generate New Clearence" 
                SemanticProperties.Hint="GenerateNewClearence"
                Clicked="OnGenerateClicked"
                HorizontalOptions="Center" />
            </HorizontalStackLayout>
            <AbsoluteLayout
                BackgroundColor="LightGrey"
                Opacity="0.5">
                <Label
                    x:Name="ClearenceBox"
                    Text="(Generate a new clearance)"
                    Style="{StaticResource Clearence}"
                    SemanticProperties.HeadingLevel="Level2"/>
            </AbsoluteLayout>
            <toolkit:DrawingView
                Lines="{Binding MyLines}"
                LineColor="Red"
                LineWidth="5" />
            <Image
                x:Name="Chart"
                Source="dotnet_bot.png"
                Aspect="AspectFit"
                IsVisible="Hidden" />
        </VerticalStackLayout>
</ContentPage>
